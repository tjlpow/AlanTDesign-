.item-image{
    width: 100%;
    height: 600rpx;
}

.post-container{
    display:flex;
    flex-direction:column;
    margin-top: 20rpx;
    margin-bottom: 0rpx;
    background-color: #fff;
    border-top: 1px solid #ededed;
    border-bottom: 1px solid #ededed;
    padding-bottom: 5px;
    font-weight:300;
    font-size:27rpx;
}

.post-author-date{
    margin:10rpx 30rpx 20rpx 30rpx;
}

.post-author{
    width: 60rpx;
    height:60rpx;
    vertical-align: middle;
}

.post-author-name{
    margin-left: 20rpx;
    vertical-align: middle; 
    color: #666;
    line-height: 60rpx;
    
}

.post-date{
    float:right;
    vertical-align: middle;
    line-height: 60rpx;
    color: #666;
}

.post-title{
    font-size:42rpx;
    color:#333;
    margin-left:60rpx;
    margin-right:60rpx;
    margin-bottom:30rpx;
    text-align: center;
    font-weight:500;
    letter-spacing: 1.5rpx;
    line-height: 60rpx;
}

.post-image{
    width:100%;
    height:400rpx;
    margin: auto 0;
    margin-bottom:30px;
}

.post-content{
    color:grey;
    margin-left: 60rpx;
    margin-right: 60rpx;
    margin-bottom:50rpx;
    letter-spacing: 0rpx;
    line-height:40rpx;
    text-align: center;
}

.post-like{
    font-size: 13px;
    display: flex;
    flex-direction:row;
    margin-left:10px;
    line-height: 16px;
}

.post-like-image{
    width: 16px;
    height:16px;
    margin-right:8px;
    vertical-align: middle;
}

.post-like-font{
    vertical-align: middle;
    margin-right: 20px;
    color:lightgray;
}